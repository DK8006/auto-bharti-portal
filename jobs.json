fetch("jobs.json")
  .then(res => res.json())
  .then(jobs => {
    const sarkariDiv = document.getElementById("sarkari");
    const otherDiv = document.getElementById("other");

    if (!jobs || jobs.length === 0) {
      sarkariDiv.innerHTML = "<p>No jobs available</p>";
      otherDiv.innerHTML = "";
      return;
    }

    jobs.forEach(job => {
      const card = document.createElement("div");
      card.className = "job-card";

      card.innerHTML = `
        <div class="job-title">${job.title}</div>
        <div>Department: <b>${job.department}</b></div>
        <div>Post: <b>${job.post}</b></div>
        <div class="last-date">Last Date: ${job.last_date || "Check Notification"}</div>
        <a class="view-btn" href="${job.link}" target="_blank">View Details</a>
      `;

      if (job.source === "SarkariResultOfficial") {
        sarkariDiv.appendChild(card);
      } else {
        otherDiv.appendChild(card);
      }
    });
  })
  .catch(err => {
    document.getElementById("sarkari").innerHTML =
      "<p>Error loading jobs</p>";
    console.error(err);
  });
